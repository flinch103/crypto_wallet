              .form-group
                %label.col-md-2.col-sm-2.col-xs-2
                  04
                .col-md-10.col-sm-10.col-xs-10
                  %input.form-control#4word{:placeholder => "vicious", :type => "text"}/
            .col-md-3.col-sm-3.col-xs-12
              .form-group
                %label.col-md-2.col-sm-2.col-xs-2
                  05
                .col-md-10.col-sm-10.col-xs-10
                  %input.form-control#5word{:placeholder => "two", :type => "text"}/
