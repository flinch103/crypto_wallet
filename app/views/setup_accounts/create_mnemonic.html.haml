    .thumbnail
      %h2.heading-setup-block
        Setup Account
      %p.subheading-setup-block
        Write down your 12 word backup phrase in correct order
      #exTab1.set-up-tabs.acc-tab-bg
        %ul.nav.nav-pills
          %li.active.setup-nav
            %a.tab-setup{rel: 'setup', tab: '#1a', :href => 'javascript:void(0)'} SETUP
          %li.verify-nav
            %a.tab-verify{rel: 'verify', tab: '#2a', :href => 'javascript:void(0)'} VERIFY
          %li.review-nav
            %a.tab-review{rel: 'review', tab: '#3a', :href => 'javascript:void(0)'} REVIEW
      %input#verify-mnemonic{name: 'name', :type => "hidden", :value => "false"}/
      .tab-content.clearfix
        #1a.tab-pane.active
          %form.form-horizontal.setup-block-input-b
            .col-md-3.col-sm-3.col-xs-12
              .form-group
                %label.col-md-2.col-sm-2.col-xs-2
