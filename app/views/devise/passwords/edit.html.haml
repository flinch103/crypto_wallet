.login-page-wrapper
  = render 'devise/shared/devise_sidenav'
  .col-md-6.col-xs-12.col-sm-12.right-field-block
    .main-auth-field-section
      %h2
        Change your password
    .auth-form-block
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, id: 'change_password_form' }) do |f|
        = f.hidden_field :role, class: 'user-role', value: 'vodiant'
        .field
          = f.password_field :password, autofocus: true, class: 'form-control', placeholder: 'New password'
        .field
          = f.password_field :password_confirmation, autofocus: true, class: 'form-control', placeholder: 'Confirm new password'
        .actions.clearfix
          = f.submit 'Change my password', class: 'btn btn-default pull-left'
          .pull-right.f-password
            = link_to "Login", new_user_session_path, class: 'bt-f-password'
    = render 'devise/shared/footer'
  - content_for :footer do
    = javascript_pack_tag 'javascripts/users/session'
    = javascript_pack_tag 'javascripts/validations/reset_password'