.dash-container.task-field-wrapper
  .panel
    .panel-header
      %h4.d-inline-block
        %b
          = @task_type
    .panel-body.plr-0
      .table-responsive
        %table.table
          %thead
            %tr
              %th Title
              %th Description
              %th.text-center Vodiant
              %th.text-center Start Date
              %th.text-center End Date
              %th.text-center Cost
              %th
          %tbody
            - unless @tasks.empty?
              - @tasks.each do |task|
                - next unless task.is_valid?
                %tr
                %td= task.title.truncate(20)
                %td.vodeer-list= task.description.truncate(80)
                %td.text-center= task.vodiant&.full_name
                %td.text-center
                  = task.created_at&.strftime("%D<br/> %T").html_safe
                %td.text-center
                  = task.end_date&.strftime("%D<br/> %T").html_safe
                %td.text-center= "#{task.wage} VDX"
                %td.detail-btn
                  %a.pan-link.btn.btn-default{ :href => task_path(task) }
                    Detail