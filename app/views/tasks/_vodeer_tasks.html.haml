.task-wrapper
  .fblock.top-tabs
    %ul.nav.nav-tabs#myTabs
      %li.active.task_filters{:role => "presentation", 'data-tab' => 'open', style: 'cursor: pointer'}
        %a{"aria-controls" => "home", "aria-expanded" => "false"}
          = t('task.types.tasks_open')
      %li.task_filters{:role => "presentation", 'data-tab' => 'ongoing', style: 'cursor: pointer'}
        %a{"aria-controls" => "home", "aria-expanded" => "false"}
          = t('task.types.tasks_ongoing')
      %li.task_filters{:role => "presentation", 'data-tab' => 'completed', style: 'cursor: pointer'}
        %a#home-tab{"aria-controls" => "home", "aria-expanded" => "false"}
          = t('task.types.tasks_completed')
      %li.task_filters{:role => "presentation", 'data-tab' => 'approved', style: 'cursor: pointer'}
        %a#home-tab{"aria-controls" => "home", "aria-expanded" => "false"}
          = t('task.types.tasks_approved')
      %li.task_filters{:role => "presentation", 'data-tab' => 'rejected', style: 'cursor: pointer'}
        %a#home-tab{"aria-controls" => "home", "aria-expanded" => "false"}
          = t('task.types.tasks_rejected')
      %li.task_filters{:role => "presentation", 'data-tab' => 'disputed', style: 'cursor: pointer'}
        %a#home-tab{"aria-controls" => "home", "aria-expanded" => "false"}
          = t('task.types.tasks_disputed')
      %li.task_filters{:role => "presentation", 'data-tab' => 'resolved', style: 'cursor: pointer'}
        %a#home-tab{"aria-controls" => "home", "aria-expanded" => "false"}
          = t('task.types.tasks_resolved')
      


  .tab-content.clearfix.fblock
    #task-open.tab-pane.active
      = render 'vodeer_list'
  
= javascript_pack_tag 'javascripts/tasks/index'

:javascript
  var filter_type = "#{@filter_type}";
  if (filter_type) {
    $("#myTabs > li.task_filters").removeClass('active');
    $("#myTabs > li.task_filters[data-tab='" + filter_type +"']").addClass('active');
  }