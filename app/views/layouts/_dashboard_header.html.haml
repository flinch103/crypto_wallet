%section.main
  %header.topbar
    %nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          / %button.navbar-toggle.collapsed{ "aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button" }
          /   %span.sr-only Toggle navigation
          /   %span.icon-bar
          /   %span.icon-bar
          /   %span.icon-bar
          %a.navbar-brand{ :href => root_path }
            %img{ :src => "/assets/logo-main.png" }/
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle{ "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button" }
                %span.round-icon
                  = image_tag current_user.avatar.url(:thumb) if current_user.avatar.present?
                = current_user&.full_name || 'Rebecca Young'
              %ul.dropdown-menu
                %li
                  = link_to 'Profile', profile_path(current_user)
                %li
                  %a{ :href => destroy_user_session_path, 'data-method': 'delete' } Log out