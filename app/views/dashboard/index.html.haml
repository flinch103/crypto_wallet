%body
  %section.main
    %header.topbar
      %nav.navbar.navbar-default.navbar-fixed-top
        .container-fluid
          .navbar-header
            %button.navbar-toggle.collapsed{ "aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button" }
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{ :href => "#" }
              %img{ :src => "/assets/logo-main.png" }/
          #navbar.navbar-collapse.collapse
            %ul.nav.navbar-nav.navbar-right
              %li.dropdown
                %a.dropdown-toggle{ "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button" }
                  %span.round-icon
                    = image_tag current_user.avatar.url(:thumb) if current_user.avatar.present?
                  = current_user&.full_name || 'Rebecca Young'
                %ul.dropdown-menu
                  %li                  
                    = link_to 'Profile', edit_user_profile_path(current_user)
                  %li
                    %a{ :href => destroy_user_session_path, 'data-method': 'delete' } Logout
          / /.nav-collapse
    %aside.left-sidebar
      .sidebar-nav
        %ul.list-unstyled
          %li.sidebar-item
            %a.sidebar-link.link-active{ :href => "#" } Dashboard
          %li.sidebar-item
            %a.sidebar-link{ :href => "/tasks" } Tasks
          %li.sidebar-item
            %a.sidebar-link{ :href => "/wallets" } Wallet
    .dash-content-wrapper
      .task-analytics-area.panel-body
        .analytics-box
          .task-value.d-inline-block
            = current_user.tasks.open.length
          .metric-icon.d-inline-block.pull-right
            %img{ :src => "/assets/dashboard/task_icon.png" }/
          %h5 Task open
        .analytics-box
          .task-value.d-inline-block
            = current_user.tasks.completed.length
          .metric-icon.d-inline-block.pull-right
            %img{ :src => "/assets/dashboard/task_completed_icon.png" }/
          %h5 Task Completed
        .analytics-box
          .task-value.d-inline-block
            = current_user.tasks.progress.length
          .metric-icon.d-inline-block.pull-right
            %img{ :src => "/assets/dashboard/task_ongoing_icon.png" }/
          %h5 Task Ongoing
        .analytics-box
          .task-value.d-inline-block
            = current_user.tasks.disputed.length
          .metric-icon.d-inline-block.pull-right
            %img{ :src => "/assets/dashboard/task_disputed_icon.png" }/
          %h5 Task Disputed
        .analytics-box
          .task-value.d-inline-block 170
          .metric-icon.d-inline-block.pull-right
            %img{ :src => "/assets/dashboard/wallet.png" }/
          %h5 Wallet Balance
        .analytics-btn-box
          %button.btn.btn-create
            %i
              %img{ :src => "assets/dashboard/create_new_task.png" }/
            %a.sidebar-link{ :href => "/tasks/new" } Create new task
      .dash-container
        .panel
          .panel-header
            %h4.d-inline-block Recent Microtask
            .pull-right.d-inline-block.filter-box
              %span Filter by
              %select
                %option All
                %option option
          .panel-body.plr-0
            .table-responsive
              %table.table
                %thead
                  %tr
                    %th Title
                    %th Description
                    %th Vodeer
                    %th Cost
                    %th Start Date
                    %th End Date
                    %th Status
                %tbody
                - unless @tasks.empty?
                  - @tasks.each do |task|
                    %tr
                      %td= task.title
                      %td= task.description
                      %td= task.vodeer || ""
                      %td= task.wage
                      %td= task.start_date
                      %td= task.end_date
                      %td= task.status
          .panel-footer
            .text-right
              %a.pan-link{ :href => "/tasks" } View All Task
        .panel
          .panel-header
            %h4.d-inline-block Disputed Task
            .pull-right.d-inline-block.filter-box
              %span Filter by
              %select
                %option All
                %option option
          .panel-body.plr-0
            .table-responsive
              %table.table
                %thead
                  %tr
                    %th Title
                    %th Desctiption
                    %th Vodeer
                    %th Cost
                    %th Start Date
                    %th End Date
                %tbody
                - unless @disputed_tasks.empty?
                  - @disputed_tasks.each do |task|
                    %tr
                      %td= task.title
                      %td= task.description
                      %td= task.vodeer || ""
                      %td= task.wage
                      %td= task.start_date
                      %td= task.end_date
                    
          .panel-footer
            .text-right
              %a.pan-link{ :href => "/tasks" } View All Task
